{
  "Logging": {
    "LogLevel": {
      "Default": "Information",
      "Microsoft": "Warning",
      "Microsoft.Hosting.Lifetime": "Information"
    }
  },
  "AllowedHosts": "*",
  "SqlServerConnectionString": "Your Connections String",

  "Serilog": {
    "MinimumLevel": "Information",
    "WriteTo": [     
      {
        "Name": "File",
        "Args": {
          "path": "Logs\\RequestLogs.txt",
          "rollingInterval": "Day",
          "fileSizeLimitBytes": 200000
        }
      }
    ]
  }
}
